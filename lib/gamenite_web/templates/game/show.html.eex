<h1>Show Game</h1>

<ul>

  <li>
    <strong>Title:</strong>
    <%= @game.title %>
  </li>

  <li>
    <strong>Description:</strong>
    <%= @game.description %>
  </li>

  <li>
    <strong>Play count:</strong>
    <%= @game.play_count %>
  </li>

</ul>

<span><%= link "Edit", to: Routes.game_path(@conn, :edit, @game) %></span>
<span><%= link "Back", to: Routes.game_path(@conn, :index) %></span>
